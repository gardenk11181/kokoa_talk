<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/mContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mButtonChat"/>

    <Button
        android:id="@+id/mButtonFriend"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mButtonChat"
        android:text="@string/freinds"
        />

    <Button
        android:id="@+id/mButtonChat"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/mButtonFriend"
        app:layout_constraintRight_toLeftOf="@id/mButtonNews"
        android:text="@string/sharp"/>

    <Button
        android:id="@+id/mButtonNews"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/mButtonChat"
        app:layout_constraintRight_toLeftOf="@id/mButtonSetting"
        android:text="@string/news"/>

    <Button
        android:id="@+id/mButtonSetting"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/mButtonNews"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/setting"
        />



</androidx.constraintlayout.widget.ConstraintLayout>